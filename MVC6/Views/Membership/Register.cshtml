@model RegisterInfo
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-route-return="@ViewData["ReturnUrl"]" asp-controller="Membership" asp-action="Register" onsubmit="btnRegister.diable = true; return true;">
            <div class="text-danger" asp-validation-summary="All"></div>
            <div class="form-group">
                @Html.DisplayNameFor(m => m.UserID)
                <input type="text" style="text-transform:lowercase" class="form-control" asp-for="UserID" placeholder="UserID" autofocus />
                <span class="text-danger" asp-validation-for="UserID"></span>
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(m => m.UserName)
                <input type="text" class="form-control" asp-for="UserName" placeholder="UserName" />
                <span class="text-danger" asp-validation-for="UserName"></span>
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(m => m.UserEmail)
                <input type="text" class="form-control" asp-for="UserEmail" placeholder="UserEmail" />
                <span class="text-danger" asp-validation-for="UserEmail"></span>
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(m => m.Password)
                <input type="password" class="form-control" asp-for="Password" placeholder="Password" />
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>
            <button type="submit" name="btnRegister" class="btn btn-lg btn-success btn-block">Register</button>
            <p style="padding-top:10px;"><a asp-route-return="@ViewData["ReturnUrl"]" asp-controller="Membership" asp-action="Login" class="btn btn-primary btn-block">Membership Login</a></p>
        </form>
    </div>
</div>
